{
  "name": "elm-spa",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run copy-assets && elm make src/Main.elm --optimize --output=build/app.js",
    "copy-assets": "rimraf build && mkdir build && cp -r public/* build",
    "debug": "elm-live src/Main.elm --port=3000 --dir=public/ -- --output=public/app.js --debug",
    "deploy": "npm run build && gh-pages --dist build/",
    "install": "elm make src/Main.elm",
    "live": "elm-live src/Main.elm --port=3000 --dir=public/ -- --output=public/app.js",
    "start": "npm run live",
    "test": "elm-test"
  },
  "author": "Allo-Media",
  "license": "MIT",
  "devDependencies": {
    "elm": "^0.19.0-bugfix2",
    "elm-format": "^0.8.0",
    "elm-live": "^3.0.5",
    "elm-test": "beta",
    "gh-pages": "^2.0.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.1"
  }
}
